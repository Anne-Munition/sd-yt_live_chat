{
  "name": "streamdeck-yt_live_chat",
  "version": "1.0.0",
  "description": "Streamdeck plugin to open a live YouTube chat in a popout browser window.",
  "private": true,
  "author": "DBKynd <db@dbkynd.com>",
  "license": "MIT",
  "scripts": {
    "package": "npm run clean && npm run create-folder && npm run build",
    "prettier": "prettier --write \"**/*.{js,md,*rc,html,json}\" --ignore-path .gitignore",
    "clean": "rimraf ./Release",
    "create-folder": "mkdirp ./Release",
    "build": "DistributionTool.exe -b -i src/com.dbkynd.yt-live-chat.sdPlugin -o Release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anne-Munition/streamdeck-yt_live_chat.git"
  },
  "devDependencies": {
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  }
}
